<h3><%= @list.name %></h3>


	<%= form_for([@list, @task]) do |f| %> <!-- nested form for task associated with current list-->
		<%= f.text_field :name, placeholder: "New Task" %> <br>
	<% end %>

<ul>
	<% @list.tasks.each do |task| %>
		<li><%= link_to task.name, task_path(task) %></li>
	<% end %>
</ul>
